<div>
  <!-- modal toggle -->
  <input type="checkbox" id="editModalToggle" class="peer hidden" />
  <!-- modal backdrop/wrapper -->
  <label
    for="editModalToggle"
    class="fixed inset-0 z-30 hidden bg-black bg-opacity-50 peer-checked:block"
  ></label>
  <!-- modal gradient background -->
  <div
    id="editModalBackground"
    class="animate__animated animate__zoomIn relative inset-y-2/4 z-30 hidden w-fit self-center rounded-3xl bg-gradient-to-r from-secondaryTheme via-tertiaryTheme to-quaternaryTheme p-2 shadow-lg shadow-tertiaryTheme peer-checked:block"
  >
    <!-- modal content -->
    <div
      id="editModalBox"
      class="z-30 flex h-fit flex-col rounded-2xl bg-secondaryTheme ~w-[25rem]/[50rem]"
    >
      <h1
        id="modalBrewerySelection"
        class="josefin-sans-importFont self-center p-3 text-center font-extrabold text-tertiaryTheme ~text-xl/5xl"
      ></h1>
      <h2
        id="modalBrewerySelectionAddress"
        class="josefin-sans-importFont self-center p-1 text-center font-extrabold text-tertiaryTheme ~text-base/3xl"
      ></h2>
      <h2
        id="modalBrewerySelectionCountry"
        class="josefin-sans-importFont self-center p-1 text-center font-extrabold text-tertiaryTheme ~text-base/3xl"
      ></h2>
      <div>
        <h2
          class="josefin-sans-importFont flex items-center p-3 font-extrabold text-quaternaryTheme ~text-xl/5xl"
        >
          Rating:

          <img
            id="emptyMugs0"
            class="emptyMugs ml-2 ~h-[1.5rem]/[3rem] ~w-[1.5rem]/[3rem] hover:cursor-pointer"
            src="empty-mugs-light.svg"
          />
          <img
            id="emptyMugs1"
            class="emptyMugs ml-2 ~h-[1.5rem]/[3rem] ~w-[1.5rem]/[3rem] hover:cursor-pointer"
            src="empty-mugs-light.svg"
          />
